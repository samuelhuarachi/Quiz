{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest": true
    },

    "overrides": [],
    "parserOptions": {
        "ecmaVersion": 2015
    },

    "extends": ["google"],
    "parser": "@typescript-eslint/parser",
    "rules": {
        "max-len": [
            "error",
            {
                "code": 150
            }
        ],

        "quotes": ["error", "double"],
        // "valid-jsdoc": ["error"],
        "require-jsdoc": 0,
        "indent": ["error", 4],
        "@typescript-eslint/no-var-requires": 1,
        "prefer-template": 1,
        "prefer-const": 0,
        "camelcase": "off",
        "object-curly-spacing": ["error", "always"],
        "no-unused-vars": 1,
        "valid-jsdoc": 0
    },
    "plugins": ["@typescript-eslint"]
}
